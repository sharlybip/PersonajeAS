<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dona"
    tools:context=".PrincipalSimpsonsActivity">
    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/simp"/>
    <ImageView
        android:id="@+id/personajeCambia"
        android:layout_width="400dp"
        android:layout_height="700dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"/>
    <Button
        android:id="@+id/btn_jugar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="500dp"
        android:textSize="20sp"
        android:text="@string/jugar"
        android:background="@color/boton_avng"
        android:textColor="@color/blanco"/>

    <Button
        android:id="@+id/btn_personajes"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="430dp"
        android:textSize="20sp"
        android:text="@string/personajes"
        android:background="@color/boton_avng"
        android:textColor="@color/blanco"/>

</RelativeLayout>